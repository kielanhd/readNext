<h1>Listing Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Author first name</th>
          <th>Author last name</th>
          <th>Number of pages</th>
          <th> science fiction</th>
          <th> top 100</th>
          <th> satire</th>
          <th> drama</th>
          <th> action</th>
          <th> adventure</th>
          <th> romance</th>
          <th> mystery</th>
          <th> horror</th>
          <th> children</th>
          <th> science</th>
          <th> history</th>
          <th> math</th>
          <th> anthology</th>
          <th> poetry</th>
          <th> comic</th>
          <th> diary</th>
          <th> series</th>
          <th> bio autobio</th>
          <th> fantasy</th>
          <th> dragon</th>
          <th> fairy tale</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    <tbody>

    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author_first_name %></td>
        <td><%= book.author_last_name %></td>
        <td><%= book.number_of_pages %></td>
        <td><%= book.is_science_fiction %></td>
        <td><%= book.is_satire %></td>
        <td><%= book.is_drama %></td>
        <td><%= book.is_action %></td>
        <td><%= book.is_adventure %></td>
        <td><%= book.is_romance %></td>
        <td><%= book.is_mystery %></td>
        <td><%= book.is_horror %></td>
        <td><%= book.is_children %></td>
        <td><%= book.is_science %></td>
        <td><%= book.is_history %></td>
        <td><%= book.is_math %></td>
        <td><%= book.is_anthology %></td>
        <td><%= book.is_poetry %></td>
        <td><%= book.is_comic %></td>
        <td><%= book.is_diary %></td>
        <td><%= book.is_series %></td>
        <td><%= book.is_bio_autobio %></td>
        <td><%= book.is_fantasy %></td>
        <td><%= book.is_dragon %></td>
        <td><%= book.is_fairy_tale %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

